@using GYPSEA.Models
@model BoatPO
@{
    ViewBag.Title = "UpdateSailboat";
}

<h2>UpdateSailboat</h2>

@using (Html.BeginForm("UpdateSailboat", "Boat", FormMethod.Post))
{
    <div class="form-horizontal">
        <div class="form-group">
            @Html.HiddenFor(model => Model.BoatID)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => Model.YearofBoat)
        </div>
        <div class="form-group">
            @Html.TextBoxFor(model => Model.YearofBoat, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => Model.BoatType)
        </div>
        <div class=" form-group">
            @Html.TextBoxFor(model => Model.BoatType, new { @class = "form-control" })
        </div>
        @Html.LabelFor(model => Model.Length)
        <div class="form-group">
            @Html.TextBoxFor(model => Model.Length, new { @class = "form-control" })
        </div>
        @Html.LabelFor(model => Model.Model)
        <div class="form-group">
            @Html.TextBoxFor(model => Model.Model, new { @class = "form-control" })
        </div>
        @Html.LabelFor(model => Model.CostperDay)
        <div class="form-group">
            @Html.TextBoxFor(model => Model.CostperDay, new { @class = "form-control" })
        </div>

        <input type="submit" value="Submit" />
    </div>
}